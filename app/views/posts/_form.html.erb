<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= form_for(@post, html: { class: "shadow p-3 mb-5 bg-white rounded" }) do |f| %>
        <% if @post.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title, class: "font-weight-bold" %>
          <%= f.text_field :title, class: "form-control", placeholder: "Enter a title" %>
        </div>

        <div class="form-group">
          <%= f.label :content, class: "font-weight-bold" %>
          <%= f.text_area :content, class: "form-control", rows: 5, placeholder: "Enter your content" %>
        </div>

        <%= f.hidden_field :user_id %>

        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-primary" %>
          <%= link_to 'Back', posts_path, class: "btn btn-secondary mr-9" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

